    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="fontFamily">@font/alexandria</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/dialog</item>
        <item name="buttonTint">@color/strong_warning</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeColor">@color/azulPrincipal</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/brandColor</item>
