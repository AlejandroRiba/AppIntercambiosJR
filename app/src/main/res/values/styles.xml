<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButtonThemeAccept" parent="Widget.MaterialComponents.Button">
        <!-- Fondo del botón -->
        <item name="backgroundTint">@color/acceptColor</item>
        <!-- Fuente personalizada -->
        <item name="fontFamily">@font/alexandria</item>
        <!-- Tamaño del texto -->
        <item name="android:textSize">15sp</item>
        <!-- Color del texto -->
        <item name="android:textColor">@color/black</item>
        <!-- Padding horizontal -->
        <item name="android:paddingHorizontal">20dp</item>
        <!-- Texto sin mayúsculas automáticas -->
        <item name="android:textAllCaps">false</item>
    </style>

