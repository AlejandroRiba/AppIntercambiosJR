<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.SettingFragment">

    <!-- Titulo de la pantalla -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajustes"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/azulPrincipal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Contenedor de opciones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginHorizontal="28dp"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tema -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconTema"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_dark_mode_24"
                android:contentDescription="@string/tema"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/labelTema"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tema"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/editText" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchTema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="@color/azulClaro"
                app:thumbTint="@color/azulPrincipal" />
        </LinearLayout>

        <!-- Idioma -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconIdioma"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_language"
                android:contentDescription="@string/idioma"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/labelIdioma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/idioma"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/editText" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchIdioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="@color/azulClaro"
                app:thumbTint="@color/azulPrincipal" />
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
















































































